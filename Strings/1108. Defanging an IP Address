class Solution {
public:
    string defangIPaddr(string address) {
        
        string res = "" ;
        for(int i = 0 ; i < address.size() ; i++)
        {
            if(address[i] ==  '.' )
            {
                res  += "[.]";
            }
            else
            {
                res += address[i];
            }
        }
        
        return res;
        
    }
};


//--------------------------------------------



class Solution {
public:
    string defangIPaddr(string address) {
        string  res = "" ;
        
        for(auto i : address)
        {
            if(i == '.')
            {
                res += "[.]";
            }
            else
            {
                res += i;
            }
        }
        
        return res;
        
    }
};
