// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

void rec(int i)
{
    if(i <= 5)
    {
        cout<<"medo"<<endl;
        rec(i + 1);
    }
}


int main() {
   
   int i = 1 ;
   rec(i);

    return 0;
}


output :

medo
medo
medo
medo
medo

