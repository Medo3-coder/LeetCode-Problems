class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        
        int MAX = INT_MIN ;
        int sum = 0 ; 
        
        int n = nums.size() ;
        
        for(int i = 0 ; i < n ; i++)
        {
            sum += nums[i];
            MAX = max(sum , MAX);
            
            if(sum < 0)     sum = 0 ; 
            
            
        }
        
        return MAX;
        
        //tc -> O(N)
        //sc -> O(1)
        
    }
};
