//----------------sol 1


class Solution {
public:
    int missingNumber(vector<int>& nums) {
        
        int x1 = 0 ;
        int x2 = 0 ;
        int n = nums.size();
        
        for(int i = 0 ; i < n ; i++)
        {
            x1 = x1 ^nums[i];  // 1 ^ 0 ^ 3
            x2 = x2 ^(i + 1);  // 1 ^ 2 ^ 3
            
        }
        
        return x1 ^ x2 ;
        //  a^a=0 ,so the number present both in x1 and x2 will cancel out(become zero ) 
      //  and the element which is not present in x1 . i.e 2 will be returned by the function.
    }
};
